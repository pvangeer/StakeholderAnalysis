<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:stakeholderTableView="clr-namespace:StakeholderAnalysis.Visualization.ViewModels.DocumentViews.StakeholderTableView"
                    xmlns:visualization="clr-namespace:StakeholderAnalysis.Visualization"
                    xmlns:data="clr-namespace:StakeholderAnalysis.Data;assembly=StakeholderAnalysis.Data"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    xmlns:converters="clr-namespace:StakeholderAnalysis.Visualization.Converters"
                    xmlns:stakeholderTable="clr-namespace:StakeholderAnalysis.Visualization.Converters.Diagrams.StakeholderTable"
                    xmlns:fluent="urn:fluent-ribbon"
                    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary
            Source="/StakeholderAnalysis.Visualization;Component/Theme/GeneralStyles.xaml" />
        <ResourceDictionary
            Source="/StakeholderAnalysis.Visualization;Component/Theme/DataGridStyles.xaml" />
        <ResourceDictionary
            Source="/StakeholderAnalysis.Visualization;Component/Theme/DeltaresColorTheme.xaml" />
        <ResourceDictionary Source="/StakeholderAnalysis.Visualization;Component/Theme/StakeholderAnalysisTheme.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <visualization:StakeholderTypeToNameConverter x:Key="StakeholderTypeToNameConverter" />
    <converters:IconTypeToIconSourceConverter x:Key="IconTypeToIconSourceConverter" />

    <visualization:NullValueToBoolConverter x:Key="NullValueToBoolConverter" />

    <DataTemplate x:Key="StakeholderTypeItemDataTemplate" DataType="{x:Type data:StakeholderType}">
        <DataTemplate.Resources>
            <ObjectDataProvider x:Key="StakeholderTypeIconStyles"
                                MethodName="GetValues"
                                ObjectType="{x:Type system:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="data:StakeholderIconType" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
        </DataTemplate.Resources>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Image
                Width="16"
                Height="16"
                Source="{Binding IconType, Converter={StaticResource IconTypeToIconSourceConverter}}"
                Margin="0,0,5,0" />
            <TextBlock Text="{Binding Name}" />
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="SelectedStakeholderDetailsPanelDataTemplate"
                  DataType="{x:Type stakeholderTableView:StakeholderDetailsViewModel}">
        <Border>
            <Grid
                Margin="10,5,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" MinHeight="{StaticResource DefaultItemHeight}" />
                    <RowDefinition Height="Auto" MinHeight="{StaticResource DefaultItemHeight}" />
                    <RowDefinition Height="Auto" MinHeight="{StaticResource DefaultItemHeight}" />
                    <RowDefinition Height="Auto" MinHeight="{StaticResource DefaultItemHeight}" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Foreground="{StaticResource Deltares.Brushes.LightBlue}"
                    FontWeight="Bold"
                    FontFamily="Franka"
                    FontSize="36"
                    Text="{Binding Name}" />
                <Rectangle
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalAlignment="Stretch"
                    Fill="{StaticResource Deltares.Brushes.DarkGreen}"
                    Height="2"
                    StrokeThickness="0" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Text="Type stakeholder"
                    TextAlignment="Right"
                    VerticalAlignment="Center"
                    Foreground="{StaticResource Deltares.Brushes.Foreground}" />
                <ComboBox
                    Grid.Row="2"
                    Grid.Column="2"
                    Margin="5,0"
                    ItemsSource="{Binding ElementName=TableGrid, Path=DataContext.StakeholderTypes}"
                    SelectedItem="{Binding Type}"
                    ItemTemplate="{StaticResource StakeholderTypeItemDataTemplate}"
                    BorderBrush="{StaticResource Deltares.Brushes.DarkGreen}"
                    IsEnabled="{Binding Converter={StaticResource NullValueToBoolConverter}}"
                    VerticalAlignment="Center"
                    Foreground="{StaticResource Deltares.Brushes.Foreground}" />
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    Foreground="{StaticResource Deltares.Brushes.Foreground}"
                    FontSize="14"
                    Text="e-mail adres"
                    TextAlignment="Right"
                    VerticalAlignment="Center" />
                <fluent:Button
                    Grid.Row="3"
                    Grid.Column="1"
                    Size="Small"
                    IsEnabled="{Binding Converter={StaticResource NullValueToBoolConverter}}"
                    Icon="pack://application:,,,/StakeholderAnalysis.Visualization;component/Resources/Fluent/mail_24_regular.ico"
                    Command="{Binding EmailStakeholderCommand}" />
                <TextBox
                    Grid.Row="3"
                    Grid.Column="2"
                    Margin="5,0"
                    Text="{Binding Email}"
                    VerticalAlignment="Center"
                    BorderBrush="{StaticResource Deltares.Brushes.DarkGreen}"
                    TextAlignment="Left"
                    IsEnabled="{Binding Converter={StaticResource NullValueToBoolConverter}}"
                    Foreground="{StaticResource Deltares.Brushes.Foreground}" />
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="0"
                    Text="Telefoonnummer"
                    VerticalAlignment="Center"
                    TextAlignment="Right"
                    Foreground="{StaticResource Deltares.Brushes.Foreground}" />
                <fluent:Button
                    Grid.Row="4"
                    Grid.Column="1"
                    Size="Small"
                    IsEnabled="{Binding Converter={StaticResource NullValueToBoolConverter}}"
                    Icon="pack://application:,,,/StakeholderAnalysis.Visualization;component/Resources/Fluent/call_24_regular.ico"
                    Command="{Binding CallStakeholderCommand}" />
                <TextBox
                    Grid.Row="4"
                    Grid.Column="2"
                    Margin="5,0"
                    Text="{Binding TelephoneNumber}"
                    BorderBrush="{StaticResource Deltares.Brushes.DarkGreen}"
                    IsEnabled="{Binding Converter={StaticResource NullValueToBoolConverter}}"
                    VerticalAlignment="Center"
                    TextAlignment="Left" />
                <TextBlock
                    Grid.Row="5"
                    Grid.Column="0"
                    Text="Notities"
                    VerticalAlignment="Center"
                    TextAlignment="Left"
                    Foreground="{StaticResource Deltares.Brushes.Foreground}" />
                <xctk:RichTextBox
                    Grid.Row="6"
                    Grid.Column="0"
                    Text="{Binding Notes}"
                    BorderBrush="{StaticResource Deltares.Brushes.DarkGreen}"
                    IsEnabled="{Binding Converter={StaticResource NullValueToBoolConverter}}"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Auto"
                    Grid.ColumnSpan="3" />
            </Grid>
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="StakeholderTableDataTemplate" DataType="stakeholderTableView:StakeholderTableViewModel">
        <Grid Name="TableGrid" DataContext="{Binding}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <DataGrid
                Grid.Column="0"
                Name="TableDataGrid"
                AutoGenerateColumns="False"
                SelectionMode="Extended"
                CanUserAddRows="True"
                CanUserDeleteRows="True"
                CanUserResizeRows="False"
                ColumnHeaderHeight="{StaticResource DefaultItemHeight}"
                ItemsSource="{Binding StakeholderViewSource.View}"
                SelectionUnit="CellOrRowHeader">
                <DataGrid.Resources>
                    <stakeholderTable:StakeholderTypesToMenuItemsConverter x:Key="StakeholderTypesToMenuItemsConverter" />
                    <stakeholderTable:AppointToDiagramMenuItemsConverter x:Key="AppointToDiagramMenuItemsConverter" />

                    <ContextMenu x:Key="RowContextMenu">
                        <ContextMenu.Resources>
                            <Style TargetType="MenuItem" BasedOn="{StaticResource MenuItemStyle}" />
                        </ContextMenu.Resources>
                        <fluent:GroupSeparatorMenuItem />
                        <MenuItem Header="Type Toewijzen"
                                  ItemsSource="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}},
                                                Path=PlacementTarget.Tag,
                                                Converter={StaticResource StakeholderTypesToMenuItemsConverter}}" />
                        <MenuItem Header="Diagram Toewijzen"
                                  ItemsSource="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}},
                                                Path=PlacementTarget.Tag,
                                                Converter={StaticResource AppointToDiagramMenuItemsConverter}}" />
                        <fluent:GroupSeparatorMenuItem />
                        <MenuItem Header="Verwijderen"
                                  Command="{Binding  RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}},
                                                Path=PlacementTarget.Tag.DeleteStakeholderCommand}" />
                    </ContextMenu>
                </DataGrid.Resources>
                <DataGrid.GroupStyle>
                    <!-- Style for groups at top level. -->
                    <GroupStyle>
                        <GroupStyle.ContainerStyle>
                            <Style TargetType="{x:Type GroupItem}">
                                <Setter Property="Margin" Value="0,1,0,5" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type GroupItem}">
                                            <StackPanel>
                                                <Expander
                                                    IsExpanded="True"
                                                    Background="{StaticResource Deltares.Brushes.LightGray}"
                                                    BorderBrush="{StaticResource Deltares.Brushes.LightBlue}"
                                                    Foreground="{StaticResource Deltares.Brushes.Foreground}"
                                                    BorderThickness="0">
                                                    <Expander.Resources>
                                                        <Style TargetType="Border">
                                                            <Setter Property="CornerRadius" Value="0" />
                                                        </Style>
                                                    </Expander.Resources>
                                                    <Expander.Header>
                                                        <DockPanel Height="{StaticResource DefaultItemHeight}"
                                                                   VerticalAlignment="Center">
                                                            <TextBlock FontWeight="Bold" Margin="5,0,0,0"
                                                                       MinWidth="100" VerticalAlignment="Center">
                                                                <TextBlock.Text>
                                                                    <MultiBinding
                                                                        Converter="{StaticResource StakeholderTypeToNameConverter}">
                                                                        <Binding Path="Name" />
                                                                        <Binding ElementName="TableGrid"
                                                                            Path="DataContext.StakeholderTypesChangedProperty" />
                                                                    </MultiBinding>
                                                                </TextBlock.Text>
                                                            </TextBlock>
                                                            <TextBlock VerticalAlignment="Center" Text="(" />
                                                            <TextBlock VerticalAlignment="Center"
                                                                       Text="{Binding Path=ItemCount}" />
                                                            <TextBlock VerticalAlignment="Center" Text=")" />
                                                        </DockPanel>
                                                    </Expander.Header>
                                                    <Expander.Content>
                                                        <ItemsPresenter />
                                                    </Expander.Content>
                                                </Expander>
                                            </StackPanel>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </GroupStyle.ContainerStyle>
                    </GroupStyle>
                    <!-- Style for groups under the top level. -->
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <DockPanel Height="{StaticResource DefaultItemHeight}" VerticalAlignment="Center">
                                    <TextBlock FontWeight="Bold" Margin="30,0,0,0" MinWidth="100"
                                               VerticalAlignment="Center">
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{StaticResource StakeholderTypeToNameConverter}">
                                                <Binding Path="Name" />
                                                <Binding ElementName="TableGrid"
                                                         Path="DataContext.StakeholderTypesChangedProperty" />
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                    <TextBlock FontWeight="Bold" VerticalAlignment="Center" Text="(" />
                                    <TextBlock FontWeight="Bold" Text="{Binding Path=ItemCount}"
                                               VerticalAlignment="Center" />
                                    <TextBlock FontWeight="Bold" VerticalAlignment="Center" Text=")" />
                                </DockPanel>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </DataGrid.GroupStyle>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow" BasedOn="{StaticResource DataGridRowStyleBase}">
                        <Setter Property="IsSelected" Value="{Binding IsSelected}" />
                        <Setter Property="ContextMenu" Value="{StaticResource RowContextMenu}" />
                        <Setter Property="Tag"
                                Value="{Binding DataContext, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Header="Naam"
                        MinWidth="200"
                        Binding="{Binding Name, Mode=TwoWay}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="5,1" />
                                <Setter Property="Foreground" Value="Black" />
                                <Setter Property="TextAlignment" Value="Center" />
                                <Setter Property="HorizontalAlignment" Value="Left" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.EditingElementStyle>
                            <Style TargetType="TextBox">
                                <Setter Property="Height" Value="25" />
                                <Setter Property="Margin" Value="5,1" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                <Setter Property="HorizontalContentAlignment" Value="Left" />
                                <Setter Property="HorizontalAlignment" Value="Left" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.EditingElementStyle>
                    </DataGridTextColumn>
                    <DataGridComboBoxColumn
                        Header="Type"
                        DisplayMemberPath="Name"
                        SelectedItemBinding="{Binding Type}">
                        <DataGridComboBoxColumn.ElementStyle>
                            <Style TargetType="ComboBox">
                                <Setter Property="ItemsSource"
                                        Value="{Binding ElementName=TableGrid, Path=DataContext.StakeholderTypes}" />
                                <Setter Property="Foreground" Value="Black" />
                                <Setter Property="Margin" Value="5,1" />
                                <Setter Property="HorizontalAlignment" Value="Left" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="ItemTemplate"
                                        Value="{StaticResource StakeholderTypeItemDataTemplate}" />
                            </Style>
                        </DataGridComboBoxColumn.ElementStyle>
                        <DataGridComboBoxColumn.EditingElementStyle>
                            <Style TargetType="ComboBox">
                                <Setter Property="ItemsSource"
                                        Value="{Binding ElementName=TableGrid, Path=DataContext.StakeholderTypes}" />
                                <Setter Property="Height" Value="25" />
                                <Setter Property="Margin" Value="5,1" />
                                <Setter Property="HorizontalAlignment" Value="Left" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="ItemTemplate"
                                        Value="{StaticResource StakeholderTypeItemDataTemplate}" />
                            </Style>
                        </DataGridComboBoxColumn.EditingElementStyle>
                    </DataGridComboBoxColumn>
                </DataGrid.Columns>
            </DataGrid>
            <GridSplitter
                Grid.Column="1"
                Width="5"
                Background="{StaticResource Fluent.Ribbon.Brushes.Separator.Background}"
                HorizontalAlignment="Stretch"
                ResizeBehavior="BasedOnAlignment" />
            <ContentPresenter
                Grid.Column="2"
                Content="{Binding LastSelectedStakeholderViewModel}"
                ContentTemplate="{StaticResource SelectedStakeholderDetailsPanelDataTemplate}" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>