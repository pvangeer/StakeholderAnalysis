<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:projectExplorer="clr-namespace:StakeholderAnalysis.Visualization.ViewModels.ProjectExplorer">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ProjectExplorerExpandableContentGroupDataTemplate.xaml"/>
        <ResourceDictionary Source="ProjectExplorerStakeholderOverviewTableDataTemplate.xaml"/>
        <ResourceDictionary Source="ProjectExplorerStakeholderTypesDataTemplate.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <DataTemplate x:Key="ProjectExplorerDataTemplate" DataType="projectExplorer:ProjectExplorerViewModel">
        <Grid>
            <StackPanel Orientation="Vertical">
                <ContentPresenter 
                    Content="{Binding OnionDiagramsViewModel}" 
                    ContentTemplate="{StaticResource ProjectExplorerExpandableDiagramCollectionDataTemplate}"/>
                <ContentPresenter 
                    Content="{Binding ForceFieldDiagramsViewModel}" 
                    ContentTemplate="{StaticResource ProjectExplorerExpandableDiagramCollectionDataTemplate}"/>
                <ContentPresenter 
                    Content="{Binding AttitudeImpactDiagramsViewModel}" 
                    ContentTemplate="{StaticResource ProjectExplorerExpandableDiagramCollectionDataTemplate}"/>
                <ContentPresenter
                    Content="{Binding StakeholderOverviewTableViewModel}"
                    ContentTemplate="{StaticResource ProjectExplorerStakeholderOverviewTableDataTemplate}"/>
                <ContentPresenter
                    Content="{Binding StakeholderTypesViewModel}"
                    ContentTemplate="{StaticResource ProjectExplorerStakeholderTypesDataTemplate}"/>
            </StackPanel>
        </Grid>
    </DataTemplate>
</ResourceDictionary>