<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:projectExplorer="clr-namespace:StakeholderAnalysis.Visualization.ViewModels.ProjectExplorer">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ProjectExplorerOnionDiagramsDataTemplate.xaml"/>
        <ResourceDictionary Source="ProjectExplorerForceFieldDiagramsDataTemplate.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <DataTemplate x:Key="ProjectExplorerDataTemplate" DataType="projectExplorer:ProjectExplorerViewModel">
        <Grid>
            <StackPanel Orientation="Vertical">
                <ContentPresenter 
                    Content="{Binding OnionDiagramsViewModel}" 
                    ContentTemplate="{StaticResource ProjectExplorerOnionDiagramsDataTemplate}"/>
                <ContentPresenter 
                    Content="{Binding ForceFieldDiagramsViewModel}" 
                    ContentTemplate="{StaticResource ProjectExplorerForceFieldDiagramsDataTemplate}"/>
            </StackPanel>
        </Grid>
    </DataTemplate>
</ResourceDictionary>