<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:xcad="http://schemas.xceed.com/wpf/xaml/avalondock"
                    xmlns:projectExplorer="clr-namespace:StakeholderAnalysis.Visualization.ViewModels.ProjectExplorer">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ExpandableElementDataTemplate.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <xcad:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

    <DataTemplate x:Key="ProjectExplorerExpandableContentGroupDataTemplate" DataType="projectExplorer:IExpandableContentGroupViewModel">
        <StackPanel Orientation="Vertical">
            <ContentPresenter 
                Content="{Binding}" 
                ContentTemplate="{StaticResource ExpandableElementDataTemplate}"/>
            <Grid Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ItemsControl Grid.Column="1" ItemsSource="{Binding Diagrams}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="projectExplorer:ProjectExplorerForceFieldDiagramViewModel">
                            <Border BorderThickness="0" Margin="0,1,0,1">
                                <Border.InputBindings>
                                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding OpenViewForDiagramCommand}" />
                                </Border.InputBindings>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <Image 
                                        Grid.Column="0" 
                                        Width="20"
                                        Height="20"
                                        Source="{Binding IconSourceString}"/>
                                    <TextBox 
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        Grid.Column="1" 
                                        Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                        FontSize="12"/>
                                    <Button
                                        Grid.Column="2"
                                        Command="{Binding RemoveDiagramCommand}"
                                        Style="{StaticResource RemoveButtonStyle}"/>
                                </Grid>
                                <Border.Style>
                                    <Style TargetType="{x:Type Border}">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="CornflowerBlue"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="False">
                                                <Setter Property="Background" Value="GhostWhite"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>