<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:onionDiagramProperties="clr-namespace:StakeholderAnalysis.Visualization.ViewModels.OnionDiagramProperties">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary
            Source="/StakeholderAnalysis.Visualization;Component/DataTemplates/TreeViewDataTemplate.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <DataTemplate x:Key="OnionDiagramPropertiesDataTemplate"
                  DataType="onionDiagramProperties:OnionDiagramPropertiesViewModel">
        <Grid>
            <StackPanel Orientation="Vertical">
                <ContentPresenter
                    Content="{Binding OnionRingsViewModel}"
                    ContentTemplate="{StaticResource IPropertyCollectionItemDataTemplate}" />
                <ContentPresenter
                    Content="{Binding ConnectionGroupsViewModel}"
                    ContentTemplate="{StaticResource IPropertyCollectionItemDataTemplate}" />
            </StackPanel>
        </Grid>
    </DataTemplate>
</ResourceDictionary>